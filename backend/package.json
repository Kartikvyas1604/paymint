{
  "name": "paymint-backend",
  "version": "1.0.0",
  "description": "PAYMINT Backend API - ETHGlobal ETHOnline 2025",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "axios": "^1.6.2",
    "ethers": "^6.8.1",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@pythnetwork/client": "^2.19.0",
    "@pythnetwork/price-service-client": "^1.5.1",
    "@lit-protocol/lit-node-client": "^2.2.52",
    "@lit-protocol/auth-helpers": "^2.2.52",
    "@lit-protocol/constants": "^2.2.52",
    "crypto-js": "^4.2.0",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^29.5.8",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ]
  }
}